<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".ActivityOption4">

    <GridView
        android:id="@+id/gridview2"
        android:layout_width="358dp"
        android:layout_height="563dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:numColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/AlertLightstext1"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/AlertLightstext1"
        app:layout_constraintTop_toBottomOf="@+id/AlertLightstext1" />

    <TextView
        android:id="@+id/AlertLightstext1"
        android:layout_width="257dp"
        android:layout_height="76dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/Tp"
        android:textColor="#F44336"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="62dp"
        android:layout_height="72dp"
        android:layout_marginTop="64dp"
        android:onClick="back"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/AlertLightstext1"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>